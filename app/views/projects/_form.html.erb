                  <%= form.label :days_to_complete %>
                  <%= form.number_field :days_to_complete, :class => 'form-control' %>
                </div>

                <div class="actions">
                  <%= form.submit :class => 'btn btn-info'%>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
